# General Settings
NODE_ENV=development
PORT=3000

# Stellar Blockchain Configuration
STELLAR_NETWORK=testnet # testnet or public (mainnet)
STELLAR_SECRET_KEY=your_stellar_secret_key_here # Secret key for deployer account (starts with 'S')
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org # Horizon API for testnet; use https://horizon.stellar.org for mainnet
STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org # Soroban RPC for smart contracts
STELLAR_FRIENDBOT_URL=https://friendbot.stellar.org # Fund testnet accounts
STELLAR_PASSPHRASE=Test SDF Network ; September 2015 # Testnet passphrase; use "Public Global Stellar Network ; September 2015" for mainnet

# Stellar Account and Asset Addresses (Start with 'G')
PICOIN_ISSUER_ADDRESS=your_picoin_issuer_address_here # Stellar account issuing PiCoin (starts with 'G')
PICOIN_ASSET_CODE=PICOIN # Asset code for PiCoin
PICOIN_SOROBAN_CONTRACT_ID=your_picoin_soroban_contract_id_here # Soroban contract ID for PiCoin (starts with 'C' if used)
DEX_SOROBAN_CONTRACT_ID=your_dex_soroban_contract_id_here # Soroban contract ID for DEX
LIQUIDITY_POOL_SOROBAN_CONTRACT_ID=your_liquidity_pool_soroban_contract_id_here # Soroban contract ID for PiCoin-XLM pool

# Backend Configuration
JWT_SECRET=your_jwt_secret_here # Secret for JWT signing (e.g., random 32-byte string)
MONGODB_URI=mongodb://localhost:27017/picoin_dex # MongoDB connection string
REDIS_URL=redis://localhost:6379 # Redis connection for rate limiting and caching
STELLAR_API_KEY=your_stellar_api_key_here # Optional: API key for Stellar services (e.g., third-party APIs)
WEBHOOK_SECRET=your_webhook_secret_here # Secret for webhook verification

# WebSocket URLs
WS_SERVER_URL=ws://localhost:3000 # Global server WebSocket (server.js)
WS_MARKET_URL=ws://localhost:8081 # Market data WebSocket (marketRoutes.js)
WS_LIQUIDITY_URL=ws://localhost:8083 # Liquidity data WebSocket (liquidityRoutes.js)

# Frontend Configuration (Prefixed with REACT_APP_)
REACT_APP_WS_URL=ws://localhost:8081
REACT_APP_WS_LIQUIDITY_URL=ws://localhost:8083
REACT_APP_WS_SERVER_URL=ws://localhost:3000
REACT_APP_PICOIN_ISSUER_ADDRESS=your_picoin_issuer_address_here
REACT_APP_PICOIN_ASSET_CODE=PICOIN
REACT_APP_PICOIN_SOROBAN_CONTRACT_ID=your_picoin_soroban_contract_id_here
REACT_APP_DEX_SOROBAN_CONTRACT_ID=your_dex_soroban_contract_id_here
REACT_APP_LIQUIDITY_POOL_SOROBAN_CONTRACT_ID=your_liquidity_pool_soroban_contract_id_here
REACT_APP_API_URL=http://localhost:3000 # Backend API base URL
REACT_APP_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
REACT_APP_STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
REACT_APP_STELLAR_NETWORK=testnet

# Security Settings
RATE_LIMIT_WINDOW_MS=60000 # Rate limit window (1 minute)
RATE_LIMIT_MAX=100 # Max requests per window
CORS_ORIGIN=http://localhost:3000 # Allowed CORS origin (update for production)
