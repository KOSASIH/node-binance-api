# General Settings
NODE_ENV=development                    # Environment: development, production, or test
PORT=3000                               # Backend server port (update for production, e.g., 80 or 443)

# Stellar Blockchain Configuration
STELLAR_NETWORK=testnet                 # Network: testnet or public (mainnet)
STELLAR_SECRET_KEY=your_stellar_secret_key_here  # Secret key for deployer account (starts with 'S', 56 chars)
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org  # Horizon API (use https://horizon.stellar.org for mainnet)
STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org  # Soroban RPC for smart contracts
STELLAR_FRIENDBOT_URL=https://friendbot.stellar.org  # Fund testnet accounts (not used in mainnet)
STELLAR_PASSPHRASE=Test SDF Network ; September 2015  # Testnet passphrase (use "Public Global Stellar Network ; September 2015" for mainnet)

# Stellar Account and Asset Configuration
PICOIN_ISSUER_ADDRESS=your_picoin_issuer_address_here  # PiCoin issuer account (starts with 'G', 56 chars)
PICOIN_ASSET_CODE=Pi                    # Asset code for PiCoin stablecoin (1-12 chars, matches PiCoin.rs)
PICOIN_SOROBAN_CONTRACT_ID=your_picoin_soroban_contract_id_here  # PiCoin Soroban contract ID (starts with 'C', set after deploy)
DEX_SOROBAN_CONTRACT_ID=your_dex_soroban_contract_id_here  # DEX Soroban contract ID (starts with 'C', set after deploy)

# Backend Configuration
JWT_SECRET=your_jwt_secret_here         # Secret for JWT signing (32+ chars, generate with `openssl rand -hex 32`)
MONGODB_URI=mongodb://localhost:27017/picoin_dex  # MongoDB connection (update for cloud, e.g., mongodb+srv://...)
REDIS_URL=redis://localhost:6379        # Redis connection for caching/rate limiting (update for cloud)
STELLAR_API_KEY=your_stellar_api_key_here  # Optional: API key for Stellar services (e.g., third-party APIs)
WEBHOOK_SECRET=your_webhook_secret_here  # Secret for webhook verification (32+ chars)
LOG_LEVEL=info                          # Winston log level: error, warn, info, debug (use error for production)

# WebSocket URLs
WS_SERVER_URL=ws://localhost:3000       # Backend WebSocket (server.js)
WS_MARKET_URL=ws://localhost:8081       # Market data WebSocket (marketRoutes.js)
WS_TRADE_URL=ws://localhost:8082        # Trade data WebSocket (tradeRoutes.js)
WS_LIQUIDITY_URL=ws://localhost:8083    # Liquidity data WebSocket (liquidityRoutes.js)

# Frontend Configuration (Prefixed with REACT_APP_)
REACT_APP_API_URL=http://localhost:3000  # Backend API base URL (update for production, e.g., https://api.yourdomain.com)
REACT_APP_WS_SERVER_URL=ws://localhost:3000  # Backend WebSocket for frontend
REACT_APP_WS_MARKET_URL=ws://localhost:8081  # Market WebSocket for frontend
REACT_APP_WS_TRADE_URL=ws://localhost:8082  # Trade WebSocket for frontend
REACT_APP_WS_LIQUIDITY_URL=ws://localhost:8083  # Liquidity WebSocket for frontend
REACT_APP_STELLAR_NETWORK=testnet        # Stellar network for frontend
REACT_APP_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org  # Horizon API for frontend
REACT_APP_STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org  # Soroban RPC for frontend
REACT_APP_PICOIN_ISSUER_ADDRESS=your_picoin_issuer_address_here  # PiCoin issuer for frontend
REACT_APP_PICOIN_ASSET_CODE=Pi          # PiCoin asset code for frontend
REACT_APP_PICOIN_SOROBAN_CONTRACT_ID=your_picoin_soroban_contract_id_here  # PiCoin contract ID for frontend
REACT_APP_DEX_SOROBAN_CONTRACT_ID=your_dex_soroban_contract_id_here  # DEX contract ID for frontend

# Security Settings
RATE_LIMIT_WINDOW_MS=60000              # Rate limit window (1 minute)
RATE_LIMIT_MAX=100                     # Max requests per window per IP
CORS_ORIGIN=http://localhost:3000       # Allowed CORS origin (update for production, e.g., https://yourdomain.com)
SESSION_SECRET=your_session_secret_here  # Secret for session management (32+ chars)
CSRF_TOKEN_SECRET=your_csrf_token_secret_here  # Secret for CSRF protection (32+ chars)

# Monitoring and Analytics (Optional)
SENTRY_DSN=your_sentry_dsn_here         # Sentry DSN for error tracking (optional)
NEW_RELIC_KEY=your_new_relic_key_here   # New Relic key for performance monitoring (optional)
